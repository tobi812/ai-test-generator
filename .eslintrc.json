{
    "env": {
        "node": true,
        "jest": true
    },
    "extends": [
        "prettier",
        "plugin:prettier/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "tsconfig.json",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint/eslint-plugin",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "warn"
    }
}
